.control{
  display: flex;
  justify-content:center;
}

.picker-box-ctrl .picker{
  font-size: 16pt;
  opacity: 0.9;
  color: #febf2c;
}

.picker-box-ctrl .arrow{
  width: 16pt;
  height: 16pt;
  margin-left: -4pt;
  margin-bottom: -2pt;
}

.button-play{
  margin-top: 20pt;
  padding-top: 10 pt;
  padding-bottom: 10pt;
  width: 100%;
}

.checkbox{
  padding-top: 10pt;
  display: flex;
  justify-content:center;
}

.picker-bpm{
  padding-left: 5pt;
}